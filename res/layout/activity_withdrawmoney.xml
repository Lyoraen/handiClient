<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#040037"
    tools:context=".AccueilActivity"
    android:id="@+id/layoutWithdrawmoney" >

    <TextView
        android:id="@+id/choixmontant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"
        android:text="@string/choixmontant" />   

    
    <TextView
        android:id="@+id/amountField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/choixmontant"
        android:width="200dp"
        android:height="50dp"
        android:background="#FFFFFF"
        />
    
    <GridLayout 
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="4"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">
    <Button
        android:id="@+id/withdrawmoneybutton1"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="1" />

    <Button
        android:id="@+id/withdrawmoneybutton2"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="2" />
    
    <Button
        android:id="@+id/withdrawmoneybutton3"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="3" />
    
    <Button
        android:id="@+id/withdrawmoneybuttoncancel"
        android:layout_gravity="left|top"
    	android:height="70dp"
        android:width="100dp"
        android:text="Corriger" /> 
    <Button
        android:id="@+id/withdrawmoneybutton4"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="4" /> 
    <Button
        android:id="@+id/withdrawmoneybutton5"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="5" /> 
    <Button
        android:id="@+id/withdrawmoneybutton6"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="6" /> 
    <Button
        android:id="@+id/withdrawmoneybuttonvalidate"
        android:layout_gravity="left|top"
    	android:height="70dp"
        android:width="100dp"
        android:text="Valider" /> 
    <Button
        android:id="@+id/withdrawmoneybutton7"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="7" />
    <Button
        android:id="@+id/withdrawmoneybutton8"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="8" /> 
	<Button
        android:id="@+id/withdrawmoneybutton9"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="9" /> 
    <Button
        android:id="@+id/withdrawmoneybutton10"
        android:layout_gravity="left|top"
    	android:height="70dp"
        android:width="100dp"
        android:text=" " />
    <Button
        android:id="@+id/withdrawmoneybutton11"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text=" " /> 
    <Button
        android:id="@+id/withdrawmoneybutton0"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text="0" />
    <Button
        android:id="@+id/withdrawmoneybutton12"
        android:layout_gravity="left|top"
        android:width="70dp"
    	android:height="70dp"
        android:text=" " />
    <Button
        android:id="@+id/withdrawmoneybutton13"
        android:layout_gravity="left|top"
    	android:height="70dp"
        android:width="100dp"
        android:text=" " />

    </GridLayout>
    
    
</RelativeLayout>