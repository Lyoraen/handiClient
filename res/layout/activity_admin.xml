<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#040037"
    tools:context=".AccueilActivity" 
    android:id="@+id/layoutAdmin">

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        android:text="@string/add" />
    
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="220dp"
        android:layout_below="@id/add"
        android:text="@string/id" />

    
    <EditText
        android:id="@+id/idtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add"
        android:width="200dp"
        android:height="50dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="30dp"
        />
    
    
    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/id"
        android:layout_marginLeft="220dp"
        android:text="@string/nom" />
    
    <EditText
        android:id="@+id/nomfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idtag"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:height="50dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="30dp"
        />
    
    <TextView
        android:id="@+id/soldetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/nom"
        android:layout_marginLeft="220dp"
        android:text="@string/soldeText" />
    
    <EditText
        android:id="@+id/soldefield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nomfield"
        android:width="200dp"
        android:height="50dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="50dp"
        />
    
    <Button
        android:id="@+id/valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
        android:text="@string/valid"
        android:layout_marginBottom="10dp"
        android:textSize="40sp"
        android:layout_below="@id/soldefield"
      />

</RelativeLayout>